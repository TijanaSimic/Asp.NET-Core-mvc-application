@model Project.Models.Database.Subject

@{
    ViewData["Title"] = "Edit";
    bool active = Model.isActive();

}

<h1>Edit Subject</h1>

 
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idSub" />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
                   <div class="form-group">
                <label asp-for="activity"></label>
                <input type="radio"  asp-for="activity" value="active" checked="@active"/>active
                <input type="radio"  asp-for="activity" value="inactive"/>inactive
                <span asp-validation-for="activity" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="professors" class="control-label"></label>
                <select asp-for="professors" asp-items="ViewBag.professors" class="form-control"></select>
                <span asp-validation-for="professors" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

