@model IEnumerable<Project.Models.Database.Student>
@using Project.Models.Database
 
@{
    ViewData["Title"] = "Index";
}
 
<h1>All students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.idStud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.firstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastName)
            </th>
            <th>About</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td> 
                 @Html.DisplayFor(modelItem => item.idStud)
          
           </td>
            <td> 
                 @Html.DisplayFor(modelItem => item.firstName)
          
           </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idStud">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idStud">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idStud">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
